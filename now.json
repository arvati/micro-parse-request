{
    "version": 2,
    "name": "micro-parse-request",
    "env": {
        "COOKIESECRET": "@cookie_secret"
    },
    "regions": ["all"],
    "public": true,
    "github": {
        "enabled": true,
        "autoAlias": true,
        "silent": false,
        "autoJobCancelation": true
    },
    "builds": [
        { "src": "public/**", "use": "@now/static" },
        { "src": "example.js", "use": "@now/node" }
    ],
    "routes": [
        { "src": "/micro/(.*)", "dest": "/example.js" },
        { "src": "/(.*)", "dest": "/public/$1"}
    ]
}
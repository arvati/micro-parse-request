{
    "version": 2,
    "name": "micro-parse-request",
    "env": {
        "COOKIESECRET": "@cookie_secret"
    },
    "regions": ["all"],
    "public": true,
    "github": {
        "enabled": true,
        "autoAlias": true,
        "silent": false,
        "autoJobCancelation": true
    },
    "builds": [
        { "src": "index.md", "use": "@now/md"},
        { "src": "example.js", "use": "@now/node" },
        { "src": "favicon.ico", "use": "@now/static" }
    ],
    "routes": [
        { "src": "/micro/(.*)", "dest": "/example.js" },
        { "src": "/favicon.ico$", "dest": "/favicon.ico" },
        { "src": "(.*)", "dest": "/"}
    ]
}